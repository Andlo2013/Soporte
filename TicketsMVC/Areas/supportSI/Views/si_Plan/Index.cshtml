@model IEnumerable<_Entidades.Plan>

@{
    ViewBag.Title = "Listado";
}

<h2>Listado</h2>

<p>
    @Html.ActionLink("Nuevo Plan", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Descripción
        </th>
        <th>
            Minutos
        </th>
        <th>
            Activo
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Minutos)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EstReg)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.id }) 
        </td>
    </tr>
}

</table>
